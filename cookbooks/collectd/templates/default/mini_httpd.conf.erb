## /etc/mini_httpd.conf
host=<%= @host %>
port=<%= @port %>
user=nobody
##
## CGI:
##	?	match a single char
##	*	matches any string excluding "/"
##	**	matches any string including "/"
##	separate multiple patterns with "|"
cgipat=**.cgi
##
## chroot:
#chroot
#nochroot
##
logfile=<%= @log %>
pidfile=<%= @pid %>
##
charset=iso-8859-1
## virtual hosting:
#vhost
## ssl:
#nossl
#ssl
#certfile=/tmp/mini_httpd.pem
