# THRESHHOLDS

  <Threshold>
  <Plugin "load">
    <Type "load">
      WarningMin    0.00
      WarningMax    <%= "%0.2f" % @load_warning %>
      FailureMin    0.00
      FailureMax    <%= "%0.2f" % @load_failure %>
      DataSource "shortterm"
    </Type>
  </Plugin>
  
  <Plugin "swap">
    <Type "swap-used">
      WarningMin    0.00
      WarningMax    <%= 128.0 * 1024 * 1024 %>
      FailureMin    0.00
      FailureMax    <%= 384.0 * 1024 * 1024 %>
      DataSource "value"
    </Type>
  </Plugin>

  <Plugin "df">
    <Type "df">
      Instance "root"
      Invert true
      WarningMin    0.00
      WarningMax    <%= 1024.0 * 1024 * 1024 %>
      FailureMin    0.00
      FailureMax    <%= 256.0 * 1024 * 1024 %>
      DataSource "free"
    </Type>
  </Plugin>

  <Plugin "df">
    <Type "df">
      Instance "db"
      Invert true
      WarningMin    0.00
      WarningMax    <%= 1024.0 * 1024 * 1024 %>
      FailureMin    0.00
      FailureMax    <%= 256.0 * 1024 * 1024 %>
      DataSource "free"
    </Type>
  </Plugin>
  
  <Plugin "df">
    <Type "df">
      Instance "data"
      Invert true
      WarningMin    0.00
      WarningMax    <%= 1024.0 * 1024 * 1024 %>
      FailureMin    0.00
      FailureMax    <%= 256.0 * 1024 * 1024 %>
      DataSource "free"
    </Type>
  </Plugin>
  
  <Plugin "cpu">
    <Type "cpu-wait">
      WarningMin    0.00
      WarningMax    40.0
      FailureMin    0.00
      FailureMax    80.0
      DataSource "value"
    </Type>
  </Plugin>

</Threshold>

<Plugin exec>
  NotificationExec "<%= @user %>" "<%= @alert_script %>"
</Plugin>
