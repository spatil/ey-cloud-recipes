# memcached config file

MEMCACHED_BINARY="/usr/bin/memcached"

#Specify memory usage in megabytes (do not use letters)
#64MB is default
MEMUSAGE="<%= @memcached_mem_limit %>"

#User to run as
MEMCACHED_RUNAS="memcached"

#Specify maximum number of concurrent connections
#1024 is default
MAXCONN="1024"

#Listen for connections on what address?
LISTENON="0.0.0.0"

#Listen for connections on what port?
PORT="<%= @memcached_base_port %>"

#PID file location
PIDFILE="/var/run/memcached/memcached-<%= @memcached_base_port %>.pid"

#Other Options
MISC_OPTS=""
